config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Resize Bindings
bind l:ctrl;alt resize +5% +0
bind h:ctrl;alt resize -5% +0
bind k:ctrl;alt resize +0 -5%
bind j:ctrl;alt resize +0 +5%

# Push Bindings
bind l:shift;alt  push right bar-resize:screenSizeX*0.30
bind h:shift;alt  push left  bar-resize:screenSizeX*0.70
bind k:shift;alt  push right bar-resize:screenSizeX*0.5
bind j:shift;alt  push left  bar-resize:screenSizeX*0.5

# Corner Bindings
bind i:shift;alt  corner top-left resize:screenSizeX*0.5;screenSizeY*0.5
bind n:shift;alt  corner bottom-left resize:screenSizeX*0.5;screenSizeY*0.5
bind o:shift;alt  corner top-right resize:screenSizeX*0.5;screenSizeY*0.5
bind m:shift;alt  corner bottom-right resize:screenSizeX*0.5;screenSizeY*0.5

# Full Screen
bind f:shift;alt  corner top-left resize:screenSizeX;screenSizeY

# Resize Screen 1024*768
bind d:shift;alt  corner top-left resize:1024;768

# Nudge Bindings
bind l:alt nudge +5% +0
bind h:alt nudge -5% +0
bind k:alt nudge +0   -5%
bind j:alt nudge +0   +5%

# Window Hints
bind esc:alt hint
